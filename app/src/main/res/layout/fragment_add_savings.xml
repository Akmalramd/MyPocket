<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:padding="16dp"
	tools:context=".AddSavingsFragment">
	
	<!-- Title -->
	<TextView
		android:id="@+id/title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Ayo Nabung"
		android:textSize="18sp"
		android:textStyle="bold"
		android:textColor="#3A319C"
		android:layout_marginBottom="16dp" />
	
	<!-- Nama Tabungan Input -->
	<EditText
		android:id="@+id/nama_tabungan"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:hint="Nama Tabungan"
		android:background="@drawable/edittext_background"
		android:padding="12dp"
		android:layout_marginBottom="16dp" />
	
	<!-- Target Tabungan Input -->
	<EditText
		android:id="@+id/target_tabungan"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:hint="Target Tabungan"
		android:inputType="number"
		android:background="@drawable/edittext_background"
		android:padding="12dp"
		android:layout_marginBottom="16dp" />
	
	<EditText
		android:id="@+id/pemasukkan_bulanan"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:hint="Pemasukkan Bulanan"
		android:inputType="number"
		android:background="@drawable/edittext_background"
		android:padding="12dp"
		android:layout_marginBottom="16dp" />
	
	<EditText
		android:id="@+id/pengeluaran_bulanan"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:hint="Pengeluaran Bulanan"
		android:inputType="number"
		android:background="@drawable/edittext_background"
		android:padding="12dp"
		android:layout_marginBottom="16dp" />
	
	<!-- Tambah Button -->
	<Button
		android:id="@+id/btn_tambah"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="TAMBAH"
		android:backgroundTint="#3A319C"
		android:textColor="#FFFFFF"
		android:padding="12dp" />
</LinearLayout>
